<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.egci428.mobileproject.rankingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/pastelPink"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="26dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/novelView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#d9d9d9"
            android:text="Novel"
            android:textAlignment="center"
            android:textSize="30sp" />

        <android.support.design.widget.TabLayout
            android:id="@+id/tab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TabItem
                android:id="@+id/topTab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/pastelPink"
                android:text="Top 50 List" />

            <android.support.design.widget.TabItem
                android:id="@+id/lastestUpdateTab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lastest Update " />

            <android.support.design.widget.TabItem
                android:id="@+id/genreTab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Genre" />
        </android.support.design.widget.TabLayout>

        <ListView
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="461dp"
            android:layout_margin="20dp"
            android:background="@color/cardview_light_background" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="43dp"
        android:layout_height="44dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/hamburger" />



</android.support.constraint.ConstraintLayout>
