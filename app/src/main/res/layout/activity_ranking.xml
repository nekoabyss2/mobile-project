<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.egci428.mobileproject.rankingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="26dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_blue_bright"
            android:text="         Novel"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <android.support.design.widget.TabLayout
            android:id="@+id/tabTool"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_blue_bright"
            app:tabTextColor="@color/white">

            <android.support.design.widget.TabItem
                android:id="@+id/topTab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Top 50 List" />

            <android.support.design.widget.TabItem
                android:id="@+id/updateTab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lastest Update" />

            <android.support.design.widget.TabItem
                android:id="@+id/genreTab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Genre" />
        </android.support.design.widget.TabLayout>

        <ListView
            android:id="@+id/topList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/pastelPink"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/searchBtn"
        android:layout_width="35dp"
        android:layout_height="29dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/search" />

    <ImageView
        android:id="@+id/toProfileBtn"
        android:layout_width="35dp"
        android:layout_height="34dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/hamburger" />

</android.support.constraint.ConstraintLayout>
