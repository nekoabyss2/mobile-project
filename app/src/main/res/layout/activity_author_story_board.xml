<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.egci428.mobileproject.authorStoryBoard">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="413dp"
        android:layout_height="44dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/authorStory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#d9d9d9"
            android:text="Author "
            android:textAlignment="center"
            android:textSize="30sp" />

    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="412dp"
        android:layout_height="549dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/pastelPink"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_editor_absoluteX="-1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/StoryText "
                android:layout_width="415dp"
                android:layout_height="45dp"
                android:text="My Story "
                android:textAlignment="center"
                android:textSize="24sp" />

            <android.support.v7.widget.CardView
                android:id="@+id/StoryCard1"
                android:layout_width="363dp"
                android:layout_height="132dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@color/pastelPink"
                app:cardBackgroundColor="@color/cardview_light_background">

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/StoryCard2"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <android.support.v7.widget.CardView
                android:id="@+id/StoryCard"
                android:layout_width="368dp"
                android:layout_height="127dp"
                android:layout_margin="20dp"
                android:background="@color/pastelPink">

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </ScrollView>

    <ImageView
        android:id="@+id/authorHomeBackBtn"
        android:layout_width="47dp"
        android:layout_height="44dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back" />

    <ImageView
        android:id="@+id/NovelPicture"
        android:layout_width="90dp"
        android:layout_height="77dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="276dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/scrollView2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.217"
        app:srcCompat="@drawable/fav" />

    <TextView
        android:id="@+id/NovelTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="180dp"
        android:layout_marginTop="8dp"
        android:text="[Insert Title]"
        app:layout_constraintBottom_toBottomOf="@+id/scrollView2"
        app:layout_constraintEnd_toEndOf="@+id/scrollView2"
        app:layout_constraintTop_toTopOf="@+id/scrollView2"
        app:layout_constraintVertical_bias="0.146" />

</android.support.constraint.ConstraintLayout>
